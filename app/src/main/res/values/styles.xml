<?xml version="1.0" encoding="utf-8"?>
<!-- Base application theme. -->
<resources>
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="android:textColorHint">@color/primaryBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>

    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorTitleTransparent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryBlue</item>
        <item name="hintTextColor">@color/primaryBlue</item>
        <item name="endIconTint">@color/primaryBlue</item>
    </style>

    <style name="AutoCompleteTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primaryBlue</item>
        <item name="hintTextColor">@color/primaryBlue</item>
        <item name="endIconTint">@color/primaryBlue</item>
    </style>

    <style name="StepperButtonStyle" parent="Widget.Material3.Button">
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primaryBlue</item>
    </style>
</resources>